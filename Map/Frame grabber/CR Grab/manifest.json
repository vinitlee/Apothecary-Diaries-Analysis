{
    "name": "Frame Capture Tool",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "scripting",
        "activeTab",
        "webNavigation"
    ],
    "host_permissions": [
        "https://www.crunchyroll.com/*",
        "https://static.crunchyroll.com/vilos-v2/web/vilos/player.html*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.crunchyroll.com/*"
            ],
            "js": [
                "content-main.js"
            ],
            "all_frames": true
        }
    ]
}